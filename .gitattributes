# Auto detect text files and perform LF normalization
* text=auto

# Git configuration files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# Source code
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf

# Windows scripts should use CRLF
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# NuGet and .NET files
*.nuspec text eol=lf
*.csproj text eol=lf
*.sln text eol=crlf
*.cake text eol=lf

# Shell scripts should use LF
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
